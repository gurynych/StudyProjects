<UserControl x:Class="Practice4.UCs.Authorization.RegistrationPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Practice4.UCs.Authorization"
             xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">
    <Grid Background="LightCyan">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <md:Card Grid.RowSpan="3"
                 Width="400"
                 Height="300"
                 Padding="5"
                 UniformCornerRadius="8"
                 md:ShadowAssist.ShadowDepth="Depth5"
                 md:ShadowAssist.ShadowEdges="All">

            <UniformGrid Columns="1">
                <Label VerticalAlignment="Center"
                       HorizontalAlignment="Center"
                       Content="Регистрация"               
                       FontSize="26">
                </Label>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <md:PackIcon Foreground="{Binding ElementName=login, Path=BorderBrush}"
                                 Grid.Row="1"
                                 Grid.Column="1"
                                 Kind="Account" VerticalAlignment="Center"
                                 Margin="10"
                                 Height="25" Width="25">
                    </md:PackIcon>

                    <TextBox x:Name="login"
                             Grid.Column="1"
                             Grid.Row="1"
                             md:HintAssist.Hint="Логин"                 
                             md:HintAssist.Foreground="{DynamicResource SecondaryHueLightBrush}"
                             md:TextFieldAssist.UnderlineBrush="{DynamicResource PrimaryHueMidBrush}"                             
                             Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                             VerticalAlignment="Top"
                             Height="50"
                             Width="200"
                             TextWrapping="NoWrap">
                    </TextBox>
                </StackPanel>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <md:PackIcon Foreground="{Binding ElementName=email, Path=BorderBrush}" 
                                 Grid.Row="2"
                                 Grid.Column="0"
                                 Kind="Email"    
                                 VerticalAlignment="Center"
                                 Margin="10"
                                 Height="25" Width="25">
                    </md:PackIcon>

                    <PasswordBox x:Name="email"
                                 md:HintAssist.Hint="Email"                     
                                 md:HintAssist.Foreground="{DynamicResource SecondaryHueLightBrush}"
                                 md:TextFieldAssist.UnderlineBrush="{DynamicResource PrimaryHueMidBrush}"
                                 md:HintAssist.HelperText=""
                                 VerticalAlignment="Top"
                                 HorizontalAlignment="Center"              
                                 Style="{StaticResource MaterialDesignFloatingHintPasswordBox}" 
                                 MaxLength="12"                              
                                 Grid.Column="1" 
                                 Grid.Row="2"
                                 Height="50"
                                 Width="200">
                    </PasswordBox>
                </StackPanel>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Button Grid.Column="1"
                            Style="{StaticResource MaterialDesignRaisedLightButton}"
                            Width="150"
                            Content="Войти"
                            IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}">
                    </Button>

                    <Button Grid.Column="0"
                            Style="{StaticResource MaterialDesignFlatSecondaryLightButton}"
                            Width="150"
                            Content="Регистрация"
                            FontFamily="Cascadia Mono"                                                        
                            IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}">
                    </Button>
                </Grid>
            </UniformGrid>
        </md:Card>
    </Grid>
</UserControl>
