<Window x:Class="DB_Lab1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DB_Lab1"
        xmlns:vm="clr-namespace:DB_Lab1.ViewModel"
        xmlns:v="clr-namespace:DB_Lab1.View"
        xmlns:val="clr-namespace:DB_Lab1.Validation"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="Students DataBase"
        Height="600" Width="800"
        DataContext="{Binding MainViewModel, Source={StaticResource vmLocator}}" 
        Closing="Window_Closing">

    <Grid>
        <ContentControl Content="{Binding ActiveControl, UpdateSourceTrigger=PropertyChanged}"/>
    </Grid>
</Window>
