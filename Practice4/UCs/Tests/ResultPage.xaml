<UserControl x:Class="Practice4.UCs.Tests.ResultPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Practice4.UCs.Tests"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <md:Card VerticalAlignment="Center"
                 HorizontalAlignment="Center"
                 Padding="50"
                 Background="{DynamicResource SecondaryHueLightBrush}"
                 UniformCornerRadius="8"                 
                 md:ShadowAssist.ShadowDepth="Depth5"
                 md:ShadowAssist.ShadowEdges="All">
            <StackPanel Orientation="Vertical"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center">
                <TextBlock Text="Ваш результат"
                           Margin="0,0,0,8"
                           FontSize="18"/>
                <TextBlock x:Name="ResultText"
                           HorizontalAlignment="Center"
                           FontSize="18"/>
            </StackPanel>
        </md:Card>
    </Grid>
</UserControl>
