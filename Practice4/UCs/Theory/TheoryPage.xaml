<UserControl x:Class="Practice4.UCs.Theory.TheoryPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Practice4.UCs.Theory"
             xmlns:us="clr-namespace:Practice4.UCs.MainMenu"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">
    <StackPanel Orientation="Vertical">
        <TextBlock x:Name="TheoryTitle"/>
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="30">
                <RichTextBox x:Name="TheoryRichText" IsReadOnly="True"/>
            </StackPanel>
        </ScrollViewer>
    </StackPanel>
</UserControl>
