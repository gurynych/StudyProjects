<UserControl x:Class="Practice4.UCs.MainMenu.IntermediateTestPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Practice4.UCs.MainMenu"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <TreeView x:Name="TheoryTree"
                  MinWidth="150"
                  SelectedItemChanged="TestTree_SelectedItemChanged"
                  Margin="30">
            <TreeView.ItemTemplate>
                <HierarchicalDataTemplate ItemsSource="{Binding Topics}">
                    <TreeViewItem Header="{Binding Topic}"
                            Foreground="{DynamicResource PrimaryHueLightBrush}"
                            Tag="{Binding}"/>
                </HierarchicalDataTemplate>
            </TreeView.ItemTemplate>
        </TreeView>
    </Grid>
</UserControl>
